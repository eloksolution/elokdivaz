<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:paddingRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:drawableLeft="@mipmap/package_name"
            android:hint="Enter Offer Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/rupee"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="Enter Normal Rate" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ofer_rate"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/ofer_rates"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/rupee"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="Enter Offer Rate" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_description"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:drawableStart="@mipmap/description"
            android:hint="Enter Description" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:prompt="@string/spinner_title"
        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:elevation="5dp"
        android:background="@color/background"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="10dp"
                android:id="@+id/img_one"
                android:src="@drawable/gallery"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Image"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/textView" />
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>
